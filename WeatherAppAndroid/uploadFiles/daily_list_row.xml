<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/daily_row_height"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dailyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryFont"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dailyWeather"
        android:layout_width="@dimen/daily_img_height"
        android:layout_height="@dimen/daily_img_height"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/dailyDate"
        app:layout_constraintStart_toEndOf="@+id/dailyDate"
        app:layout_constraintTop_toTopOf="@+id/dailyDate" />

    <TextView
        android:id="@+id/minTempret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="54"
        android:textColor="@color/colorPrimaryFont"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dailyWeather"
        app:layout_constraintStart_toEndOf="@+id/dailyWeather"
        app:layout_constraintTop_toTopOf="@+id/dailyWeather"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/maxTempret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="54"
        android:textColor="@color/colorPrimaryFont"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/minTempret"
        app:layout_constraintStart_toEndOf="@+id/minTempret"
        app:layout_constraintTop_toTopOf="@+id/minTempret"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>